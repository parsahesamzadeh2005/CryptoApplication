<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Crypto Theme -->
    <style name="Theme.CryptoApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorPrimaryContainer">@color/purple_accent</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/purple_secondary</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <item name="colorSecondaryContainer">@color/dark_surface_variant</item>
        <item name="colorOnSecondaryContainer">@color/text_secondary</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/dark_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/dark_surface</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:windowBackground">@color/dark_background</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/dark_background</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/red_loss</item>
        <item name="colorOnError">@color/text_primary</item>
    </style>
</resources>