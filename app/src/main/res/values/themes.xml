<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme using Material 3 -->
    <style name="Theme.CryptoApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Brand colors (Material You will override on Android 12+) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Surface/background -->
        <item name="android:windowBackground">?attr/colorSurface</item>

        <!-- Text appearances -->
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Material3.TitleLarge</item>
    </style>
</resources>